generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum UserRole {
  SUPER_ADMIN
  ADMIN
  CREW
  PASSENGER
  FIRST_RESPONDERS
}

model User {
  userId      String   @id @default(auto()) @map("_id") @db.ObjectId
  email       String   @unique
  password    String
  role        UserRole @default(PASSENGER)
  isVerified  Boolean  @default(false)
  isOnboarded Boolean  @default(false)
}
